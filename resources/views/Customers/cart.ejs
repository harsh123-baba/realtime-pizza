<section class = "cart">
    <% if(items.length !== 0) { %>
    <div class="order container mx-auto w-1/2">
        <div class = "flex items-center items-center border-b border-gray-300 pb-4">
            <img src = "/img/cart-black.png" alt = "">
            <h1 class = "font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
    
        <div class = "pizza-list py-8">

        <% for (let i = 0; i<items.length; i++) { %>
            <div class="flex items-center">
                <img class = "w-24" src = "/img/pizza.png" alt = "">
                <div class="flex-1 ml-4">  
                    <h1><%= items[i].pizza_name %></h1>
                    <span><%= items[i].pizza_size %></span>
                </div>
                <div class="flex-1">
                    <button data-pizza = "<%= JSON.stringify(items[i].pizza_id) %>" data-itemNo="<%= JSON.stringify(i) %>" class="add-to-cart-keys">
                        <img class = "chng-arrow"src = "/img/add.png">
                    </button>
                    <span class="flex-1" id = "changed_value_<%= i %>"><%= items[i].pizza_qty%> Pcs</span>
                    <button data-pizza = "<%= JSON.stringify(items[i].pizza_id) %>" data-itemNo="<%= JSON.stringify(i) %>" class="reduce-to-cart-keys">
                        <img class = "chng-arrow"src = "/img/minus.png">
                    </button>
                </div>
                <span class="font-bold text-lg"  id = "changed_price_<%= i %>"><%= items[i].pizza_qty*items[i].pizza_price %></span>
            </div>
        <% } %>
        </div>
    

        <hr>
        <div class="text-right py-4">
            <div>
                <span class="text-lg font-bold">Total Amount:</span>
                <span class="amount text-2xl font-bold ml-2" id = "totalCartValue"><%= totalCartValue %></span>
            </div>
            <div>
                <form class="mt-12" action="">
                    <input class = "border border-gray-400 p-2 w-1/2" type="text" placeholder="Phone Number">
                    <input class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Address">
                    <div>
                        <!-- <button class="btn-order px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">
                            Order Now
                        </button> -->
                    </div>
                </form>
            </div>
            <a href = ""
            class="inline-block cursor-poiner btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Login To Continue</a>
        </div>
    </div>
    <% } else {%>
    <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ˜¶</h1>
            <p class="text-gray-500 text-lg mb-12">You Probably haven't ordered a pizza yet.<br>
                To order a pizza, go to the main page.
            </p>
            <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="Empty cart">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">
                Go Back
            </a>
    
        </div>
    
    
    </div>
    <% } %>
</section>