<section class="hero mx-auto py-16">
    <div class="container mx-auto flex flex-wrap items-center justify-between">
        <div class="w-1/2 mx-auto">
            <h6 class="text-lg"><em>Are you hungey?</em></h6>
            <h1 class="text-6xl">Don't Wait !</h1>
            <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">Order Now</button>
        </div>
        <div class="heroImage w-1/2">
            <img src="/img/hero-pizza.png" class="max-w-full h-auto">
        </div>
    </div>
</section>

<section class="menu container mx-auto ">
    <h1 class="text-xl font-bold mb-8">All Pizzas</h1>
    <div class="grid grid-cols-4 col-gap-12">
        <% pizza.forEach(function(pizza){ %>
            <div class="w-64 py-10">
                <img class="h-40 mb-4 mx-auto" src='/img/<%= pizza.image %>' alt="">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs">
                        <%= pizza.size %>
                    </span>
                    <div class="flex items-center justify-around">
                        <span class="font-bold text-lg">
                            â‚¹<%= pizza.price %>
                        </span>
                        <!-- we can not bind object directly so we need to string it first then get in js and used to json it again -->
                        <button data-pizza = "<%= JSON.stringify(pizza)%>" class="add-to-cart py-1 px-6 rounded-full">
                            <span>+</span>
                            <span>Add</span>
                        </button>
                    </div>
                </div>
            </div>

        <% }) %>
        


    </div>
</section>